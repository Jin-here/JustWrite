<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mabatis.org/DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">
<mapper namespace="com.vgaw.orm.UserMapper">
    <sql id="userField">id, token, name, password</sql>
    <insert id="insertUser" parameterType="map" useGeneratedKeys="true" keyProperty="id">
        <if test="password != null">
            insert into
            v_user(token, name, password)
            values(#{token}, #{name], #{password, jdbcType=VARCHAR})
        </if>
        <if test="password == null">
            insert into
            v_user(token, name)
            values(#{token}, #{name])
        </if>
    </insert>
    <select id="getUserById" parameterType="int" resultType="com.vgaw.orm.User">
        select
        <include refid="userField"/>
        from
        v_user where id=#{id}
    </select>
    <select id="getAllUser" parameterType="map" resultType="map">
        select
        <include refid="userField"/>
        from
        v_user where 1=1
        <choose>
            <when test="name != null">and name like '%' || #{name} || '%'</when>
            <when test="password != null">and password like '%' || #{password} || '%'</when>
            <otherwise>1=1</otherwise>
        </choose>
    </select>
    <select id="selectPage" resultType="com.vgaw.orm.User">
        select
        <include refid="userField"/>
        from v_user
    </select>
    <delete id="deleteUserById" parameterType="map">
        delete from
        v_user where id=#{id}
    </delete>
    <update id="updateUserById" parameterType="map">
        update v_user
        <set>
            <if test="name != null">name=#{name}</if>
            <if test="name == null">name=#{id}</if>
        </set>
        where id=#{id}
    </update>
</mapper>
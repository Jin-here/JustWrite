package com.example.activity;

import android.app.FragmentManager;
import android.app.FragmentTransaction;
import android.os.Bundle;
import android.support.v4.app.FragmentActivity;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.Button;

import com.example.testandroid48.R;

public class MainActivity extends FragmentActivity {
	private Button change;
	private FragmentManager fM;
	private FragmentTransaction fT;
	
	@Override
	protected void onCreate(Bundle arg0) {
		// TODO Auto-generated method stub
		super.onCreate(arg0);
		setContentView(R.layout.main);
		
		change = (Button) findViewById(R.id.change);
		
		fM = getFragmentManager();
		fT = fM.beginTransaction();
		fT.add(R.id.left, new LeftFragment(), LeftFragment.TAG);
		fT.add(R.id.right, new RightFragment(), RightFragment.TAG);
		fT.commit();
		
		change.setOnClickListener(new OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// TODO Auto-generated method stub
				//fT = fM.beginTransaction();
				LeftFragment lf = (LeftFragment) fM.findFragmentByTag(LeftFragment.TAG);
				if (lf != null){
					fT.detach(lf);
					fT.addToBackStack(null);
					fT.commit();
				}
			}
		});
	}
}

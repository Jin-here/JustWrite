	protected void onPause() {
		// TODO Auto-generated method stub
		super.onPause();
		System.out.println("activity---onpause");
		Fragment fragment = mFM.findFragmentByTag(Fragment00.TAG);
		
		
		/*System.out.println("fragment:null?" + ((fragment==null)?"true":"false"));
		
		System.out.println("isadded?" + ((fragment.isAdded())?"true":"false"));
		
		System.out.println("isdetached?" + ((fragment.isDetached())?"true":"false"));
		
		System.out.println("isHidden?" + ((fragment.isHidden())?"true":"false"));
		
		System.out.println("isvisible?" + ((fragment.isVisible())?"true":"false"));*/
		

	}

	@Override
	protected void onDestroy() {

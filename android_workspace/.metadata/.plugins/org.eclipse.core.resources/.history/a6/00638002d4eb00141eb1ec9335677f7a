package com.example.activity;

import com.example.testandroid50.R;

import android.app.Activity;
import android.app.DialogFragment;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.view.animation.Animation;
import android.view.animation.AnimationUtils;
import android.widget.ImageView;

public class LoadFragment extends DialogFragment {
	public static final String TAG = "DIALOG_FRAGMENT";
	private OnLoadDestroyedListener onLoadDestroyedListener;
	
	@Override
	public void onAttach(Activity activity) {
		// TODO Auto-generated method stub
		super.onAttach(activity);
		try {
			onLoadDestroyedListener = (OnLoadDestroyedListener) activity;
		} catch (ClassCastException e){
			throw new ClassCastException(activity.toString() + 
					" must implement OnNewItemAddedListener");
		}
	}
	
	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		// TODO Auto-generated method stub
		 
		setStyle(DialogFragment.STYLE_NO_FRAME, 0);
		View view = inflater.inflate(R.layout.load, container, false);
		ImageView load_image = (ImageView) view.findViewById(R.id.load_image);
		Animation hyperspaceJumpAnimation = AnimationUtils.loadAnimation(getActivity(), R.anim.loading_animation);
		load_image.startAnimation(hyperspaceJumpAnimation);
		return view;
	}
	
	@Override
	public void onDestroyView() {
		// TODO Auto-generated method stub
		super.onDestroyView();
		onLoadDestroyedListener.OnLoadDestroyed(true);
		Log.i("hello","destroyview");
	}
	
	public interface  OnLoadDestroyedListener{
		public void OnLoadDestroyed(Boolean flag);
	}
}

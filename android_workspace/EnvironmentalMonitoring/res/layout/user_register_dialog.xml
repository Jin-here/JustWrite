<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dip"
    android:layout_height="500dip"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="20dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dip" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register"
            android:textColor="#292929"
            android:textSize="@dimen/third_title" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" 
            android:id="@+id/close"
            android:background="@drawable/dialog_close" />
    </RelativeLayout>

    <View  android:layout_width="wrap_content" android:layout_height="1dp" android:background="@drawable/dialog_line" />
    
    <LinearLayout
       	android:focusable="true" android:focusableInTouchMode="true"
       	android:layout_width="0dip" android:layout_height="0dip"/>
    
    <EditText 
        android:id="@+id/account_edit_text"
        android:singleLine="true"
        android:layout_marginTop="0dip"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:hint="@string/username_hint"
        android:background="@drawable/username_edit_bg"/>
    
    <EditText 
        android:id="@+id/password_edit_text"
        android:singleLine="true"
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:background="@drawable/password_edit_bg"/>
    
    <EditText 
        android:id="@+id/email_edit_text"
        android:singleLine="true"
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:hint="@string/password_hint"
        android:inputType="textEmailAddress"
        android:background="@drawable/email_edit_bg"/>
   	    
    <Button
       	android:id="@+id/ok_button"
       	android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@drawable/btn_green"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="60dip"
        android:textColor="@color/white"
        android:textSize="@dimen/third_title"
        android:text="@android:string/ok" />
    
</LinearLayout>
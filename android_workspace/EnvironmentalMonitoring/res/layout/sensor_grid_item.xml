<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/green"
    android:id="@+id/sensor_gird_item_layout">
    
   
        
        <TextView
			android:id="@+id/sensor_name_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginStart="@dimen/margin"
		    android:layout_marginLeft="@dimen/margin"
		    android:layout_marginTop="@dimen/margin"
		    android:textColor="@color/white"
		    android:textSize="@dimen/second_title"		        
		    android:textStyle="bold"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentStart="true"
		    android:layout_alignParentLeft="true"/>
		<TextView
		        android:id="@+id/status_warn_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:textSize="@dimen/third_title"
		        android:textStyle="bold"        
		        android:layout_marginEnd="@dimen/margin"
		        android:layout_marginRight="@dimen/margin"
		        android:layout_marginTop="@dimen/margin"
		        android:layout_alignParentEnd="true"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true" />
   
		<TextView 
		    android:id="@+id/set_value"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:text="@string/set_value"
		    android:textColor="@color/white"
		    android:textSize="@dimen/forth_title"
		    android:layout_marginStart="@dimen/margin"
		    android:layout_marginLeft="@dimen/margin"
		    android:layout_marginTop="@dimen/margin"
		    android:layout_alignParentStart="true"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@id/sensor_name_text"/>
        <TextView
			android:id="@+id/set_value_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"		    
		    android:textColor="@color/white"
		    android:textSize="@dimen/forth_title"
					    		        
		    android:layout_toRightOf="@id/set_value"
		    android:layout_marginTop="@dimen/margin"
		    
		    android:layout_below="@id/sensor_name_text" />
	   	<TextView
			android:id="@+id/sensor_value_text"
		    android:layout_width="@dimen/sensor_value_height"
		    android:layout_height="@dimen/sensor_value_height"		    
		    android:layout_marginEnd="@dimen/margin"
		    android:layout_marginRight="@dimen/margin"
		    android:layout_marginTop="@dimen/margin"
		    android:textColor="@color/white"
		    android:textSize="@dimen/second_title"		        
		    android:textStyle="bold"
		    android:gravity="center"
		    android:background="@drawable/sensor_value_bg"
		    android:layout_alignTop="@id/set_value_text"
		    android:layout_alignParentEnd="true"
		    android:layout_alignParentRight="true" />
    
	    	
	    	
</RelativeLayout>